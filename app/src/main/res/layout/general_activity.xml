<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#181818"
    android:id="@+id/t">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connectedto"
        android:id="@+id/tv_connectedto"
        android:layout_marginTop="27dp"
        android:textColor="#ffffff"
        android:typeface="sans"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/btn_explore_white"
        android:background="#00ffffff"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/tv_connectedto"
        android:layout_centerHorizontal="true"
        android:onClick="exploreApps" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/explore"
        android:id="@+id/tv_explore"
        android:background="#00ffffff"
        android:textColor="#ffffff"
        android:typeface="sans"
        android:textSize="20dp"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/none"
        android:id="@+id/tv_dashboardip"
        android:textColor="#cf3737"
        android:layout_above="@+id/imageButton"
        android:layout_alignLeft="@+id/tv_explore"
        android:layout_alignStart="@+id/tv_explore" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_marginTop="31dp"
        android:src="@drawable/rsz_netbot_cajita_color_black_resized"
        android:background="#00ffffff"
        android:layout_below="@+id/tv_explore"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/install"
        android:id="@+id/tv_install"
        android:background="#00ffffff"
        android:textColor="#ffffff"
        android:typeface="sans"
        android:textSize="20dp"
        android:layout_below="@+id/imageButton2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text"
        android:layout_below="@+id/tv_install"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:textColor="#ffffff" />

</RelativeLayout>